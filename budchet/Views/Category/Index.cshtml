@model IEnumerable<budchet.Models.Category>

@{
    ViewData["PageTitle"] = "Категории";
    ViewData["PageActionText"] = "Создать новую категорию";
    ViewData["PageActionUrl"] = "/Category/AddOrEdit";
}


<div class="row">

    <div class="col-md-7">
        <ejs-grid id="categories" dataSource="@Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Категория" field="TitleWithIcon"></e-grid-column>
                <e-grid-column headerText="Тип" template="#typeColumnTemplate" width="150px"></e-grid-column>
                <e-grid-column headerText="Редактировать" template="#ActiontypeColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>

    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>


<script id="typeColumnTemplate" type="text/x-template">
    ${if(Type=="Income")}
    <span class="badge bg-success">Доходы</span>
    ${else}
    <span class="badge bg-danger">Расходы</span>
    ${/if}
</script>

<script id="ActiontypeColumnTemplate" type="text/x-template">

    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Category/AddOrEdit/${CategoryId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/Category/Delete/${CategoryId}" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" onclick="return confirm(&quot;Вы действительно хотите удалить?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>

</script>